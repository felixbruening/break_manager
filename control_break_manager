source break_manager

# ------------------------------------
# handle arguments function
# ------------------------------------
function handleArguments() {
    command=$1
    time_value=$2

    # -----------------------
    # if command is '-start'
    # -----------------------
    if [ "$command" == -start ]
    then
        if [ "$time_value" == 45 ]
        then
            echo "Starting timer 45 minutes"
            touch $BM_45_FILE
            touch $BM_45_WORK_FILE
        fi

        if [ "$time_value" == 50 ]
        then
            echo "Starting timer 50 minutes"
            touch $BM_50_FILE
            touch $BM_50_WORK_FILE
        fi
        
    fi

    # -----------------------
    # if command is '-stop'
    # -----------------------
    if [ "$command" == -stop ]
    then
        echo "Stop timer"

        if [ -f $BM_50_FILE ]
        then
            rm -rf $BM_50_FILE
        fi

        if [ -f $BM_45_FILE ]
        then
            rm -rf $BM_45_FILE
        fi
        
        if [ -f $BM_50_WORK_FILE ]
        then
            rm -rf $BM_50_WORK_FILE
        fi

        if [ -f $BM_45_WORK_FILE ]
        then
            rm -rf $BM_45_WORK_FILE
        fi
    fi
}

# ------------------------------------
# print usage
# ------------------------------------
function printUsage() {
    echo "Usage: "
    echo "-start <time>  | time: 45 or 50 [minutes]"
    echo "-stop"
}

# ------------------------------------
# Main
# ------------------------------------
if [ $# -eq 0 ]
then
    printUsage
else
    handleArguments $1 $2
fi

